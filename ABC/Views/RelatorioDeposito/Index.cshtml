@model IEnumerable<ABC.Models.Data.Deposito>

@{
    ViewBag.Title = "Index";
    
}

<h2>Relatório Deposíto</h2>


<table class="table">
    <tr>
        <th>
            Deposito
        </th>
        <th>
            Total Pedidos
        </th>
        <th>
            Porcentagem
        </th>
        <th>
            R$ Total
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RelatorioDetalhes.Count)
        
        </td>
        <td>
            @{ 
                var total = @item.RelatorioDetalhes.Count * 100 / ViewBag.TotalP;
            }
            @total %
        </td>
        <td>
            @item.RelatorioDetalhes.Sum(v => v.valor)
        </td>


    </tr>
}

</table>
